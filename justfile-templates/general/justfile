    # Add your dev server command here

# =================================
# Testing
# =================================

# Run tests
test:
    @echo "Running tests..."
    # Add your test command here

# =================================
# Build
# =================================

# Build project
build:
    @echo "Building project..."
    # Add your build command here

# =================================
# Cleanup
# =================================

# Clean build artifacts
clean:
    @echo "Cleaning..."
    rm -rf dist/ build/

# =================================
# Utilities
# =================================

# Show project info
info:
    @echo "Project: {{project_name}}"
    @echo ""
    @just --list
